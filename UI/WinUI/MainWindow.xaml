<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Ladybird.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ladybird"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ladybird">

    <Grid>
        <!-- Custom Title Bar Area -->
        <Grid x:Name="AppTitleBar" VerticalAlignment="Top" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Logo -->
            <Image x:Name="AppLogo" 
               Source="ms-appx:///Assets/Square44x44Logo.png" 
               Width="44" 
               Height="44" 
               Margin="12,0,12,0"/>

            <!-- App Title -->
            <TextBlock Grid.Column="1"
                   Text="New Tab - Ladybird" 
                   Style="{ThemeResource CaptionTextBlockStyle}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" 
                   FontWeight="SemiBold"
                   Margin="0,8,0,0"/>

            <!-- Space for system buttons (Windows will render them here) -->
            <Grid Grid.Column="2" Width="138"/>
        </Grid>
        <TabView Margin="0,44,0,0"
         VerticalAlignment="Stretch"
         AddTabButtonClick="TabView_AddTabButtonClick"
         TabCloseRequested="TabView_TabCloseRequested">
            <TabViewItem Header="New Tab">
                <TabViewItem.IconSource>
                    <BitmapIconSource UriSource="ms-appx:///Assets/Square44x44Logo.png"/>
                </TabViewItem.IconSource>
                <TabViewItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Address Bar -->
                        <Grid Grid.Row="0" Margin="12,8,12,8">
                            <TextBox x:Name="AddressBar" 
                                     PlaceholderText="Enter URL or search term"
                                     HorizontalAlignment="Center"
                                     MinWidth="600"
                                     MaxWidth="800"
                                     Height="32"
                                     CornerRadius="4"
                                     KeyDown="AddressBar_KeyDown"/>
                        </Grid>

                        <!-- Main Content Area -->
                        <Grid Grid.Row="1">
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">
                                <TextBlock Text="New Tab Content" 
                                           Style="{ThemeResource TitleTextBlockStyle}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabViewItem.Content>
            </TabViewItem>
        </TabView>
    </Grid>
</Window>
