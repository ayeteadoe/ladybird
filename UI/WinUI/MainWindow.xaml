<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Ladybird.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ladybird"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ladybird">
    <Grid>
        <!-- Custom Title Bar Area -->
        <Grid x:Name="AppTitleBar"  VerticalAlignment="Top" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- App Logo -->
            <Image x:Name="AppLogo" 
               Source="ms-appx:///Assets/Square44x44Logo.png" 
               Width="44" 
               Height="44" 
               Margin="12,0,12,0"/>
        </Grid>

        <!-- Rest of your content -->
        <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="0,32,0,0">
            <Button x:Name="myButton" Click="myButton_Click">Click Me</Button>
        </StackPanel>
    </Grid>
</Window>
